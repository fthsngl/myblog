                    <p>The image can be dragged only between blocks and not inside them.</p>
                </div>

            </div>*@
            <div class="form-group">
                @Html.TextAreaFor(x => x.Write.Mesaj, new { @id = "froala-editor"  })
            </div>

            <div class="form-group">
                <label asp-for="Write.Tarih" class="control-label"></label>
                <input asp-for="Write.Tarih" class="form-control" />
            </div>




            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
