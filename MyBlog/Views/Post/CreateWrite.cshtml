            <div class="form-group">
                @Html.HiddenFor(x => x.Write.Id)
            </div>

            <div class="form-group">
                <label asp-for="Write.Konu" class="control-label"></label>
                <input asp-for="Write.Konu" class="form-control" />
            </div>
