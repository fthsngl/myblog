@model MyBlog.Models.View.WriteModel

@{
    ViewData["Title"] = "CreateWrite";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>CreateWrite</h1>

@DateTime.Now
<hr />
<div class="row">
    <div class="col-md-7">
